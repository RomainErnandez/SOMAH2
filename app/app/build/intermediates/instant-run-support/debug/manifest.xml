<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eps.somah2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="24" />

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        name="eps.somah2.MyApplication"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|locale"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="eps.somah2.WelcomeActivity"
            android:configChanges="keyboardHidden|locale"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eps.somah2.AllNamedTopicsActivity"
            android:configChanges="keyboardHidden|locale"
            android:label="@string/app_name" />
        <activity
            android:name="eps.somah2.SettingsActivity"
            android:configChanges="keyboardHidden|locale"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="eps.somah2.AllNamedPeriodsActivity"
            android:configChanges="keyboardHidden|locale" />
        <activity
            android:name="eps.somah2.AllTextedContentActivity"
            android:configChanges="keyboardHidden|locale"
            android:label="@string/app_name" />
    </application>

</manifest>