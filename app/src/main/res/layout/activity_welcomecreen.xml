<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:background="#92D36E"
tools:context=".WelcomescreenActivity">

<!-- The primary full-screen view. This can be replaced with whatever view
     is needed to present your content, e.g. VideoView, SurfaceView,
     TextureView, etc. -->
<TextView android:id="@+id/welcome_screen_content" android:layout_width="match_parent"
    android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#FFFFFF"
    android:textStyle="bold" android:textSize="50sp"
    android:gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:text="@string/app_name" />

<!-- This FrameLayout insets its children based on system windows using
     android:fitsSystemWindows. -->
<FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="center">

    <LinearLayout android:id="@+id/welcome_screen_content_controls" style="?metaButtonBarStyle"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black_overlay" android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:gravity="right"
        >
    </LinearLayout>

    <ImageView
        android:layout_width="229dp"
        android:layout_height="120dp"
        android:id="@+id/imageView"
        android:src="@drawable/tap"
        android:layout_gravity="center" />
</FrameLayout>

</FrameLayout>